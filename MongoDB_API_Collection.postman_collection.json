{
    "info": {
        "_postman_id": "mongodb-api-collection",
        "name": "MongoDB API - Railway",
        "description": "MongoDB API deployed on Railway",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "https://mongo-db-api-production-0ab9.up.railway.app",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        ""
                    ]
                },
                "description": "Check if the API is running"
            }
        },
        {
            "name": "List All Collections",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/collections",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "collections"
                    ]
                },
                "description": "Get list of all collections in the database"
            }
        },
        {
            "name": "Get All Documents",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/data/users",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "data",
                        "users"
                    ]
                },
                "description": "Get all documents from a collection. Replace 'users' with your collection name."
            }
        },
        {
            "name": "Get Document by ID",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/data/users/YOUR_DOCUMENT_ID",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "data",
                        "users",
                        "YOUR_DOCUMENT_ID"
                    ]
                },
                "description": "Get a single document by its ID"
            }
        },
        {
            "name": "Create Document",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Vikas Kumar\",\n    \"email\": \"vikas@example.com\",\n    \"age\": 25,\n    \"city\": \"Delhi\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/data/users",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "data",
                        "users"
                    ]
                },
                "description": "Create a new document in the collection"
            }
        },
        {
            "name": "Bulk Insert Documents",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"documents\": [\n        {\"name\": \"Laptop\", \"price\": 50000, \"category\": \"Electronics\"},\n        {\"name\": \"Phone\", \"price\": 25000, \"category\": \"Electronics\"},\n        {\"name\": \"Headphones\", \"price\": 2000, \"category\": \"Accessories\"}\n    ]\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/data/products/bulk",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "data",
                        "products",
                        "bulk"
                    ]
                },
                "description": "Insert multiple documents at once"
            }
        },
        {
            "name": "Query with Filters",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"filter\": {\"age\": {\"$gte\": 20}},\n    \"sort\": {\"name\": 1},\n    \"limit\": 10\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/data/users/query",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "data",
                        "users",
                        "query"
                    ]
                },
                "description": "Query documents with MongoDB filter, sort, and limit"
            }
        },
        {
            "name": "Update Document",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Vikas Kumar Updated\",\n    \"age\": 26\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/data/users/YOUR_DOCUMENT_ID",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "data",
                        "users",
                        "YOUR_DOCUMENT_ID"
                    ]
                },
                "description": "Update an existing document by ID"
            }
        },
        {
            "name": "Delete Document",
            "request": {
                "method": "DELETE",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/data/users/YOUR_DOCUMENT_ID",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "data",
                        "users",
                        "YOUR_DOCUMENT_ID"
                    ]
                },
                "description": "Delete a document by ID"
            }
        },
        {
            "name": "Create Test Document",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"message\": \"Hello MongoDB!\",\n    \"timestamp\": \"2026-01-12T22:09:00\",\n    \"status\": \"success\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/data/test",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "data",
                        "test"
                    ]
                },
                "description": "Quick test to create a document in 'test' collection"
            }
        }
    ]
}